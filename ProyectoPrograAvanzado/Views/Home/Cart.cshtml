<div id="cart-container" class="container mt-4 mb-5">
    <h2>Carrito</h2>
    <div id="cart-message" class="alert alert-info" role="alert">
        Su carrito está vacio
    </div>
    <ul id="cart-items" class="list-group mb-3">
    </ul>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <button id="clear-cart" class="btn btn-danger btn-sm">Limpiar carrito</button>
        </div>
        <div class="d-flex align-items-center">
            <div id="cart-total" class="h5 me-3">
                Total: $0.00
            </div>
            <div id="checkout-section">
                <button id="checkout-button" class="btn btn-primary">Comprar</button>
            </div>
        </div>
    </div>
</div>
@model ProyectoProgramacionAvanzada.Models.Product


<h1>Eliminar Productos</h1>

<h3> ¿Está seguro que desea eliminar este producto? </h3>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        <dt class="col-sm-2">
            price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            details
        </dt>
        <dd class="col-sm-10">
            @Model.Details
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <id class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index">Volver a la lista</a>
    </id>
</form>